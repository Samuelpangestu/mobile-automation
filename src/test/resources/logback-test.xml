<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console output with minimal format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Disable all verbose logging -->
    <logger name="io.netty" level="OFF"/>
    <logger name="io.appium" level="OFF"/>
    <logger name="org.asynchttpclient" level="OFF"/>
    <logger name="org.openqa.selenium" level="OFF"/>
    <logger name="org.apache.http" level="OFF"/>

    <!-- Root logger - only show ERROR and above -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
